---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="flex not-prose py-2">
  {
    tags.map(tag => (
      <p class="btn text-base-content btn-link no-animation btn-sm ">
        <a href={`/tags/${tag}`} class="link">
          {tag}
        </a>
      </p>
    ))
  }
</div>
