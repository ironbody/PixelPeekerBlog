---
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import { themes } from "@components/ToggleTheme";

// import "@fontsource-variable/kreon";

interface Props {
  title: string;
}

// prose-code:bg-neutral prose-code:text-neutral-content prose-code:rounded-md

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="shortcut icon" href="/assets/favicon.ico" />
    <link
      rel="preload"
      href="/assets/fonts/Kreon-VariableFont_wght.ttf"
      as="font"
      type="font/ttf"
      crossorigin
    />
    <title>{title}</title>
  </head>
  <body class="font-kreon">
    <script>
      const themes = {
        light: "retro",
        dark: "dracula",
      };

      const selected = localStorage.getItem("theme") ?? "";

      if (selected == "light" || selected == "dark") {
        document.documentElement.dataset.theme = themes[selected];
      }
    </script>
    <div class="flex min-h-screen flex-col">
      <Header />
      <article
        class="prose prose-xl mx-auto w-full flex-1 px-3 py-8 text-base-content prose-h2:mt-5 prose-h2:mb-4"
      >
        <slot />
      </article>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Kreon";
    src: url("/assets/fonts/Kreon-VariableFont_wght.ttf") format("truetype");
    font-style: normal;
    font-display: swap;
    font-weight: 300 700;
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA,
      U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122,
      U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }
</style>
